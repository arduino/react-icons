{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "es5",
      "dom",
      "es6"
    ],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  }
}